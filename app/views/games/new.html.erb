<div class="container p-2">
  <div>
    <h1 class='fs-1 pb-2'>New Game</h1>
    <h2 class='fs-1 pb-2'>Welcome to the longest word-game!</h2>
    <h3 class='fs-1 pb-3'>Here is your grid:</h3>
    <ul class="d-flex justify-content-between">
      <% @letters.each do |letter| %>
        <li class='btn btn-primary p-4 fw-bold fs-3'><%= letter %></li>
      <% end %>
    </ul>
  </div>
  <form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="answer" placeholder='Type your answer here...' class='form-label w-100 fs-3' value='<%= params[:answer] %>'>
  <input type="submit" value="Play" class='form-action btn btn-primary fs-3'>
</form>
</div>
